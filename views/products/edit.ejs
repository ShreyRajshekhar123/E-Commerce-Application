<% layout('/boilerplate/boilerplate.ejs') -%>

    <div class="container mt-4">
        <form action="/products/<%= product.id %>?_method=PUT" method="post">
            <div class="mb-3">
              <label for="product-name-inp" class="form-label">Product Name</label>
              <input value="<%= product.name %>" name="name" placeholder="Enter product name" type="text" class="form-control" id="product-name-inp" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
              <label for="product-img-inp" class="form-label">Image URL</label>
              <input value="<%= product.img %>" name="img" placeholder="Enter image URL" type="text" class="form-control" id="product-img-inp" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
              <label for="product-price-inp" class="form-label">Price</label>
              <input value="<%= product.price %>" name="price" placeholder="Enter product price" min="0" type="number" class="form-control" id="product-price-inp" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
              <label for="product-desc-inp" class="form-label">Description</label>
              <textarea name="desc" class="form-control" placeholder="Enter product description" id="product-desc-inp" cols="30" rows="5"><%= product.desc %></textarea>
            </div>
            
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
          </form>
    </div>